name: Welfare Blogger Autopost

on:
  schedule:
    - cron: "0 1 * * *"   # 매일 한국시간 오전 10시 (UTC+9 → 01:00)
  workflow_dispatch:

jobs:
  autopost:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Restore blogger_token.json
        run: echo "${{ secrets.BLOGGER_TOKEN_JSON }}" > blogger_token.json

      - name: Restore openai.json
        run: echo "${{ secrets.OPENAI_JSON }}" > openai.json

      - name: Run autopost script
        env:
          BLOG_ID: "4737456424227083027"
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: python your_script.py
